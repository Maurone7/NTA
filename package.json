{
  "name": "note-taking-app",
  "version": "0.0.6",
  "description": "Cross-platform Markdown note taking app with PDF viewing support",
  "main": "src/main.js",
  "homepage": "https://github.com/Maurone7/NTA",
  "scripts": {
    "start": "electron .",
    "dev": "CI=true electronmon .",
    "test": "CI=true mocha tests/unit tests/dom tests/smoke --reporter spec",
    "test:smoke": "CI=true node scripts/smoke-test.js",
    "test:update": "CI=true mocha tests/unit/updateMechanism.spec.js --reporter spec",
    "test:e2e-pdf": "CI=true node tests/playwright/e2e-two-pdf-same-pane.js",
    "test:e2e": "./scripts/run-e2e.sh",
    "ci": "CI=true npm test && CI=true npm run build:mac",
    "run-ci": "./scripts/non-interactive.sh npm run ci",
    "install-ci": "./scripts/non-interactive.sh npm ci",
    "build": "CI=true electron-builder",
    "prebuild": "node scripts/generate-ico.js",
    "build:mac": "electron-builder --mac --publish=never",
    "build:win": "CI=true electron-builder --win",
    "build:win:no-publish": "node scripts/generate-ico.js && electron-builder --win --publish=never",
    "build:win32": "CI=true electron-builder --win --ia32",
    "build:win64": "CI=true electron-builder --win --x64",
    "build:linux": "CI=true electron-builder --linux",
    "build:all": "CI=true electron-builder --mac --win --linux",
    "build:publish": "CI=true electron-builder --publish=always",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "clean:artifacts": "node scripts/clean-repo.js"
  },
  "author": "Maurone7",
  "license": "MIT",
  "dependencies": {
    "docx": "^8.5.0",
    "dompurify": "^3.1.6",
    "electron-updater": "^6.6.2",
    "epub-gen": "^0.1.0",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.11",
    "marked": "^12.0.2",
    "node-fetch": "^3.3.2",
    "node-pty": "^1.0.0",
    "turndown": "^7.2.1",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.0",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.2",
    "eslint": "^8.57.0",
    "jsdom": "^27.0.1",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.0.0",
    "playwright": "^1.43.0"
  },
  "build": {
    "appId": "com.maurone7.notetakingapp",
    "productName": "NTA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!**/test-folder/**",
      "!test-screenshot.png",
      "!dist/**",
      "!**/*.map",
      "!**/sample-doc.pdf",
      "!**/compressed.tracemonkey-pldi-09.pdf"
    ],
    "publish": {
      "provider": "github",
      "owner": "Maurone7",
      "repo": "NTA"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "icon": "assets/NTA logo v3.png"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "background": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "assets/NTA-logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NoteTaking App",
      "uninstallDisplayName": "NoteTaking App",
      "license": "LICENSE.txt",
      "installerIcon": "assets/NTA-logo.ico",
      "uninstallerIcon": "assets/NTA-logo.ico",
      "installerHeaderIcon": "assets/NTA-logo.ico",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "allowElevation": true
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}
